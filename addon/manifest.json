{
  "description": "Add sysPass integration",
  "manifest_version": 2,
  "name": "syspass",
  "version": "1.4.0",
  "homepage_url": "https://github.com/ochorocho/syspass-firefox",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "storage",
    "*://*/*"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["polyfill.js", "background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["polyfill.js", "syspass.js"],
      "css": ["syspass.css"]
    }
  ]

}
