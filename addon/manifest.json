{
  "description": "Add sysPass integration",
  "manifest_version": 2,
  "name": "syspass",
  "version": "1.5.2",
  "homepage_url": "https://github.com/ochorocho/syspass-addon",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "storage",
    "*://*/*",
    "tabs"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["polyfill.js", "background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["polyfill.js", "syspass.js"],
      "css": ["syspass.css"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "theme_icons": [{
      "light": "icons/border-48.png",
      "dark": "icons/border-48.png",
      "size": 32
    }],
    "default_title": "sysPass",
    "default_popup": "popup.html"
  }
}
